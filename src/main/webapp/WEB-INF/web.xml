<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <servlet>
        <servlet-name>Output</servlet-name>
        <servlet-class>com.universal.servlets.customers.Output</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Output</servlet-name>
        <url-pattern>/output</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCustomer</servlet-name>
        <servlet-class>com.universal.servlets.customers.UpdateCustomer</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateCustomer</servlet-name>
        <url-pattern>/customer/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCustomer</servlet-name>
        <servlet-class>com.universal.servlets.customers.EditCustomer</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditCustomer</servlet-name>
        <url-pattern>/customer/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Outcust</servlet-name>
        <servlet-class>com.universal.servlets.OutCust</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Outcust</servlet-name>
        <url-pattern>/outcust</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateCustom</servlet-name>
        <servlet-class>com.universal.servlets.customers.CreateCustom</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateCustom</servlet-name>
        <url-pattern>/out/customers/create</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>